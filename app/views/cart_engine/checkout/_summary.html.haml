%div{ pos != "right" ? { class: "general-text-align mb-60" } : { class: "text-center general-text-right" } }
  %p.in-gold-500.font-18= t('checkout.order_summary')
  %table{ pos != "right" ? { class: "general-summary-table" } : { class: "general-summary-table general-summary-table-right general-text-right"} }
    %tr
      %td
        %p.font-16= t('checkout.item_total')
      %td
        %p.font-16= price_in_currency(order.sub_total)
    - unless order.shipping.nil?
      %tr
        %td
          %p.font-16= t('checkout.shipping')
        %td
          %p.font-16= price_in_currency(order.shipping_total)
    %tr
      %td
        %p.font-16= t('checkout.order_total')
      %td
        %p.font-16= price_in_currency(order.total_cost)